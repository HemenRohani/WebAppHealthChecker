@using WebAppHealthChecker.Application.Authentication.Commands.UserRegister;
@model UserRegisterCommand
@{
    Layout = null;
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => x.FirstName)
        @Html.TextBoxFor(x => x.FirstName, htmlAttributes: new {  @class = "form-control", placeholder = "Enter FirstName" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.LastName)
        @Html.TextBoxFor(x => x.LastName, htmlAttributes: new { @class = "form-control", placeholder = "Enter LastName" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, htmlAttributes: new { type = "email",  @class = "form-control", placeholder = "Enter Email" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password, htmlAttributes: new {  @class = "form-control", placeholder = "Enter Password" })
    </div>
    <br />
    <button type="button" data-submit="ajax" data-callback="" class="btn btn-primary w-100">Submit</button>
}
